{
    "compilerOptions": {
      "target": "es2020", // Versão do JS gerado
      "module": "commonjs", // Sistema de módulos do Node.js
      "rootDir": "./src", // Pasta dos arquivos .ts
      "outDir": "./dist", // Pasta dos arquivos compilados
      "strict": true, // Verificação de tipos mais rígida
      "esModuleInterop": true, // Permite importações padrão de módulos CommonJS
      "emitDecoratorMetadata": true, // Suporte a metadados de decoradores (TypeORM)
      "experimentalDecorators": true, // Ativa uso de @decorators
      "skipLibCheck": true // Ignora checagem de tipos em libs
    },
    "include": ["src", "seed.ts"] // Arquivos incluídos na compilação
  }  